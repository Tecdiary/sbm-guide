body
    background-color hsl(0, 0%, 94%)
    font-family: 'Montserrat', BlinkMacSystemFont, -apple-system, "Segoe UI", "Roboto", "Oxygen", "Ubuntu", "Cantarell", "Fira Sans", "Droid Sans", "Helvetica Neue", "Helvetica", "Arial", sans-serif;

#app
    .navbar .nav-links
        .nav-item .nav-link.external
            border-radius 3px
            padding .25rem .5rem
            &:hover
                background hsl(0, 0, 91%)
        .nav-item:nth-child(3)
            .nav-link.external
                color #fff
                background hsl(171, 100%, 41%)
                &:hover
                    background darken(hsl(171, 100%, 41%), 20%)
        .repo-link
            display none

    .sidebar
        border-right none
        background-color hsl(0, 0%, 86%)
        .repo-link
            display none

    .sidebar-group:not(.collapsable) .sidebar-heading,
    .sidebar-heading
        font-weight 400
        color hsl(0, 0%, 29%)
        &:hover, &:active, &.open
            color hsl(0, 0%, 21%)

    .sidebar-heading .arrow.right
        border-left 6px solid hsl(0, 0%, 50%)

    .sidebar-heading .arrow.down
        border-top 6px solid hsl(0, 0%, 50%)


.icon.outbound
    display none

p
    text-align justify
    img
        border-radius 5px
        filter drop-shadow(-1px -2px 10px hsl(0, 0%, 86%))

h1,
h2,
h3,
h4,
h5,
h6
    line-height 1.5
h1
    font-weight 300
h3
    color #000
    font-weight 300

@media (max-width: 767px)
    h2
        font-weight 300
    h3
        color #3273dc
        font-size: 1.1rem;


h1 .header-anchor,
h2 .header-anchor,
h3 .header-anchor,
h4 .header-anchor,
h5 .header-anchor,
h6 .header-anchor
    opacity 1
    color hsl(0, 0%, 86%)
    &:hover
        font-weight 400
        text-decoration none !important

.content:not(.custom)
    padding 4rem 2.5rem 1rem

    div[class*="language-"]
        border-radius 3px

.table-of-contents
    ul
        list-style none
        list-style-position outside

    > ul
        padding-left 0

        > li
            padding 0
            margin 0

    a:hover
        opacity 0.8
        text-decoration none !important

    a:active
        opacity 1
        text-decoration none !important

    a:before
        content '# '
        color #bbb
        margin-left -15px
        margin-right 3px

.sw-update-popup
    top 4.5rem
    bottom auto
    border-radius 5px
    border 1px solid hsl(0, 0%, 71%)
    button
        border 0
        color #fff
        float right
        font-size .9rem
        margin-top 1rem
        border-radius 3px
        padding .25em 2em
        padding .5rem 1rem
        background #3273dc
        &:hover
            background dark(#3273dc, 15%)
